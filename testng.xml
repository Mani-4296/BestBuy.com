        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.NavigationTest"/>
            <class name="tests.FooterLinksTest"/>
            <class name="tests.SearchAndAddToCartTest"/>
